<?xml version="1.0"?>
<!-- Custom control for the footer area of the printed page. -->
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
    horizontalAlign="right" verticalAlign="bottom">
    
    <mx:Metadata>
        [ResourceBundle("PaymentsPrint")]
    </mx:Metadata>

    <mx:Script>
        <![CDATA[
            import com.j_nid.utils.Utils;
            import mx.resources.ResourceBundle;
            
            [Bindable]
            public var total:Number = 0;
            [Bindable]
            public var outstandingTotal:Number = 0;
            [Bindable]
            private var utils:Utils = Utils.getInstance();
        ]]>
    </mx:Script>
    
    <mx:Label text="{resourceManager.getString('PaymentsPrint', 'Summary',
                        [utils.formatPrice(total)])}"/>
    
    <mx:Label text="{resourceManager.getString(
                        'PaymentsPrint', 'OutStandingSummary',
                        [utils.formatPrice(outstandingTotal)])}"/>
</mx:VBox>