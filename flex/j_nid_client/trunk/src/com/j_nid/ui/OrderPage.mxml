            private function tabBarClick(e:ItemClickEvent):void {
            	if (orderTabBar.selectedIndex == 0) {
                    currentState = "TodayOrder";
                    initTodayOrder();
                } else if (orderTabBar.selectedIndex == 1) {
                    currentState = "";
					loadCustomers();
                    initOrderByDate();
                } else if (orderTabBar.selectedIndex == 2) {
                    currentState = "TodayOrder";
                    initOrderByDate();
                }
            }
            
